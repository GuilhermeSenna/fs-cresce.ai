{
    "name": "cresceai-backend",
    "version": "1.0.0",
    "main": "index.js",
    "repository": "https://github.com/GuilhermeSenna/cresceai-backend.git",
    "author": "GuilhermeSenna <gsencruz@gmail.com>",
    "license": "MIT",
    "scripts": {
        "dev": "tsnd --inspect -r tsconfig-paths/register --exit-child --transpile-only --respawn --ignore-watch node_modules src/shared/infra/http/server.ts",
        "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files",
        "build:test": "tsc",
        "start": "node ./dist/shared/infra/http/server.js",
        "prisma:generate": "prisma generate --schema=./src/shared/infra/prisma/schema.prisma",
        "prisma:migrate": "prisma migrate dev --schema=./src/shared/infra/prisma/schema.prisma",
        "start:migrate:dev": "prisma migrate dev --schema=./src/shared/infra/prisma/schema.prisma && yarn dev",
        "start:migrate:prod": "yarn prisma migrate deploy && yarn start"
    },
    "devDependencies": {
        "@babel/cli": "^7.19.3",
        "@babel/core": "^7.20.5",
        "@babel/eslint-parser": "^7.19.1",
        "@babel/eslint-plugin": "^7.19.1",
        "@babel/plugin-proposal-class-properties": "^7.18.6",
        "@babel/plugin-proposal-decorators": "^7.20.5",
        "@babel/preset-env": "^7.20.2",
        "@babel/preset-typescript": "^7.18.6",
        "@types/axios": "^0.14.0",
        "@types/bcrypt": "^5.0.0",
        "@types/bcryptjs": "^2.4.2",
        "@types/express": "^4.17.14",
        "@types/ip": "^1.1.0",
        "@types/jsonwebtoken": "^8.5.9",
        "@types/multer": "^1.4.7",
        "@types/node": "^18.11.13",
        "@types/node-cron": "^3.0.7",
        "@types/uuid": "^9.0.0",
        "@typescript-eslint/eslint-plugin": "^5.46.0",
        "@typescript-eslint/parser": "^5.46.0",
        "babel-plugin-module-resolver": "^4.1.0",
        "babel-plugin-transform-typescript-metadata": "^0.3.2",
        "babel-plugin-tsconfig-paths-module-resolver": "^1.0.3",
        "eslint": "^8.29.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-import-resolver-typescript": "^3.5.2",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-import-helpers": "^1.3.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-promise": "^6.1.1",
        "prettier": "^2.8.1",
        "prisma": "^4.7.1",
        "ts-node-dev": "^2.0.0",
        "tsconfig-paths": "^4.1.1",
        "typescript": "^4.9.4"
    },
    "dependencies": {
        "@prisma/client": "^4.7.1",
        "aws-sdk": "^2.1272.0",
        "axios": "^1.2.1",
        "bcrypt": "^5.1.0",
        "bcryptjs": "^2.4.3",
        "celebrate": "^15.0.1",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dayjs": "^1.11.7",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "express-async-errors": "^3.1.1",
        "ip": "^1.1.8",
        "jsonwebtoken": "^8.5.1",
        "multer": "^1.4.5-lts.1",
        "node-cache": "^5.1.2",
        "node-cron": "^3.0.2",
        "pg": "^8.8.0",
        "reflect-metadata": "^0.1.13",
        "tsyringe": "^4.7.0",
        "uuid": "^9.0.0",
        "winston": "^3.8.2"
    },
    "prisma": {
        "schema": "src/shared/infra/prisma/schema.prisma"
    }
}
